<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 100%;
            margin: 0;
            padding: 0 20px;
            box-sizing: border-box;
        }

        .input-group {
            display: flex;
            gap: 10px;
            width: 100%;
            margin-bottom: 20px;
            align-items: stretch;
        }

        .input-group input, 
        .input-group button {
            border-radius: 6px;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
            height: 48px;
            line-height: 24px;
        }

        .input-group input {
            flex: 4;
            width: 0;
            min-width: 0;
        }

        .input-group input::placeholder {
            color: #888;
        }

        .input-group button {
            flex: 1;
            min-width: 80px;
            background-color: #888;
            color: white;
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            white-space: nowrap;
        }

        .input-group button:hover {
            background-color: #818181;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .result {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            background-color: #fff;
            text-align: left;
        }

        .result h4 {
            margin: 0 0 10px;
            font-size: 18px;
        }

        .result p {
            margin: 0;
            font-size: 16px;
            word-wrap: break-word;
        }

        body.dark-mode {
            background-color: #1e1e1e;
            color: #e0e0e0;
        }

        body.dark-mode input {
            background-color: #333333;
            color: #e0e0e0;
            border: 1px solid #444;
        }

        body.dark-mode input::placeholder {
            color: #888;
        }

        body.dark-mode button {
            background-color: #555;
            color: white;
        }

        body.dark-mode .result {
            background-color: #333333;
            border: 1px solid #444;
        }

        @media (max-width: 600px) {
            .container {
                padding: 10px;
            }

            .input-group {
                gap: 8px;
            }

            .input-group input, 
            .input-group button {
                height: 44px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <h5>請將網頁重新整理後，再進行質因數分解。</h5>
    <hr>
    <div class="container">
        <div class="input-group">
            <input type="number" id="number" placeholder="請輸入數字" min="2" max="1000000" required />
            <button onclick="factorize()">分解</button>
        </div>
        <h4>質因數分解結果</h4> 
        <p id="result">NULL</p>
    </div>

    <script>
        function factorize() {
            const num = parseInt(document.getElementById('number').value);
            const resultText = document.getElementById('result');

            if (isNaN(num) || num < 2 || num > 100000000) {
                alert("請輸入 2 到 100000000 之間的有效數字");
                return;
            }

            const factors = getPrimeFactors(num);
            const result = formatFactors(num, factors);

            resultText.innerHTML = result;
        }

        function getPrimeFactors(n) {
            const factors = [];

            while (n % 2 === 0) {
                factors.push(2);
                n /= 2;
            }

            for (let i = 3; i <= Math.sqrt(n); i += 2) {
                while (n % i === 0) {
                    factors.push(i);
                    n /= i;
                }
            }

            if (n > 2) {
                factors.push(n);
            }
            return factors;
        }

        function formatFactors(num, factors) {
            let formatted = `${num} = `;
            let count = 1;

            for (let i = 0; i < factors.length; i++) {
                if (i < factors.length - 1 && factors[i] === factors[i + 1]) {
                    count++;
                } else {
                    if (count > 1) {
                        formatted += `${factors[i]}<sup>${count}</sup>`;
                    } else {
                        formatted += factors[i];
                    }
                    if (i < factors.length - 1) {
                        formatted += ' × ';
                    }
                    count = 1;
                }
            }
            return formatted;
        }
    </script>
</body>
</html>
]]></content>
